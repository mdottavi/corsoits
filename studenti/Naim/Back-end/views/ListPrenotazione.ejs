
<html><head><title>Esempio di View con EJS</title>
    <script>
      function cancella(id) {
          return fetch('/prenotazione/'+id, {
              method: 'DELETE'
          });
      }    
          </script>
  </head>
  <body><h1> Lista Prenotazioni definite</h1>
    <table>
        <tr><th>Azioni</th><th>Nome</th><th>Cognome</th><th>CodFis</th><th>Nascita</th><th>Luogo</th><th>Data e Ora</th><th>Tessera Sanitaria</th></tr>
      <% for (var i = 0; i < lista.length; i++) { %>
         <tr>
             <td><input type='button' onclick='cancella("<%=lista[i].id %>")' value="Delete"/>
               <input type='button' onclick="window.location.href='/prenotazione/<%= lista[i].id %>'" value="Edit"/></td>
             <td><%= lista[i].nome %></td>
             <td><%= lista[i].cognome %></td>
             <td><%= lista[i].CodFis %></td>
             <td><%= lista[i].date %></td>
             <td><%= lista[i].luogo %></td>
             <td><%= lista[i].data_ora %></td>
             <td><img src='/<%=lista[i].TS %>'/ height=100></td>
             </td>
            </tr>
      <% } %>
    </table>
    <hr/>
    <a href="/persona/crea">Clicca Qui per creare nuove Persone...</a>
   
  
  </body></html>